      <form id="confirmDeleteForm" method="POST" action="">
        <input type="hidden" name="id" id="deleteIdInput" value="">
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Confirmar Exclusão</button>
      </form>
    </div>
  </div>
</div>

<script>
