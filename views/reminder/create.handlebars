<div class="flex min-h-screen bg-gray-100">
  <!-- Conteúdo principal -->
  <main class="flex-1 p-10">
    <div class="bg-white rounded-lg shadow p-10 max-w-2xl mx-auto">
      <form action="/reminder/add" method="POST" class="space-y-4">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Adicionar lembrete</h2>

        <div>
          <label for="title" class="block text-gray-700 font-medium">Título</label>
          <input type="text" id="title" name="title"
            class="w-full mt-1 p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Digite um lembrete..." />
        </div>

        <div>
          <label for="description" class="block text-gray-700 font-medium">Descrição</label>
          <textarea rows="4" id="description" name="description"
            class="w-full mt-1 p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>

        <div>
          <label for="date" class="block text-gray-700 font-medium">Data do lembrete</label>
          <input type="date" id="date" name="date"
            class="w-full mt-1 p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <button type="submit" id="submitBtn"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition flex justify-center items-center gap-2">
          <span id="btnText">Salvar</span>
          <span id="btnLoader"
            class="hidden animate-spin border-2 border-white border-t-transparent rounded-full w-4 h-4"></span>
        </button>
      </form>
    </div>
  </main>

  <!-- Sidebar à direita -->
  <aside class="w-64 bg-white shadow-md p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-6">Cofingurações</h2>
    <div class="space-y-2">
        
        <div>
            <label class="block text-gray-700 font-medium mb-2">Status
                <select class="w-full bg-white border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all">Published</option>
                    <option value="today">Rascunho</option>
                    <option value="upcoming">Drafit</option>
                </select>
            </label>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Acesso
                <select class="w-full bg-white border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all">Public</option>
                    <option value="today">Rascunho</option>
                    <option value="upcoming">Drafit</option>
                </select>
            </label>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Destaque
                <select class="w-full bg-white border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all">Sim</option>
                    <option value="today">Não</option>
                </select>
            </label>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Idioma
                <select class="w-full bg-white border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all">Português BR</option>
                    <option value="today">Inglês</option>
                </select>
            </label>
        </div>

        <div>
            <button type="submit" id="submitBtn"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition flex justify-center items-center gap-2">
                <span id="btnText">Agendar</span>
                <span id="btnLoader"
                    class="hidden animate-spin border-2 border-white border-t-transparent rounded-full w-4 h-4"></span>
            </button>
        </div>

    </div>
  </aside>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('submitBtn');
    const loader = document.getElementById('btnLoader');
    const text = document.getElementById('btnText');

    btn.addEventListener('click', function () {
      text.classList.add('hidden');
      loader.classList.remove('hidden');
    });
  });
</script>
