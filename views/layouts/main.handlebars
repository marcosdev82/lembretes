<body class="bg-gray-100 font-sans min-h-screen flex flex-col">

  <!-- Header Fixo -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
    <div class="px-4 py-3 flex justify-between items-center">
      <div class="flex items-center">
        <!-- Botão Hamburger (mobile) -->
        <button data-drawer-target="sidebar-multi-level-sidebar" data-drawer-toggle="sidebar-multi-level-sidebar" aria-controls="sidebar-multi-level-sidebar" type="button"
          class="inline-flex items-center p-2 mr-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200">
          <span class="sr-only">Abrir menu</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
        </button>

        <h1 class="text-xl font-bold text-gray-800 flex items-center">
          <img src="../../../img/logotipo.png" alt="Logo" class="h-9 mr-3">
          Lembretes 2025
        </h1>
      </div>

      <nav class="hidden sm:flex space-x-6">
        {{#if session.userid }}
          {{!-- <a href="/reminder/home" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/reminder/dashboard" class="text-gray-700 hover:text-blue-600 font-medium">Lembretes</a>
          <a href="/media" class="text-gray-700 hover:text-blue-600 font-medium">Mídias</a>
          <a href="/users" class="text-gray-700 hover:text-blue-600 font-medium">Usuários</a> --}}
          <a href="/settings" class="text-gray-700 hover:text-blue-600 font-medium">Configurações</a>
          <a href="/logout" class="text-red-600 hover:text-red-800 font-medium">Sair</a>
       {{else}}
          <a href="/login" class="text-gray-700 hover:text-blue-600 font-medium">Login</a>
          <a href="/register" class="text-blue-600 hover:text-blue-800 font-medium">Registrar</a>
        {{/if}}
      </nav>
    </div>
  </header>

  <!-- Sidebar (Flowbite) -->
  <aside id="sidebar-multi-level-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen pt-16 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0" aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto">
      <ul class="space-y-2 font-medium">

        <li>
          <a href="/reminder/dashboard" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
            <svg class="w-5 h-5 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
            <span class="ml-3">Dashboard</span>
          </a>
        </li>

        {{!-- <li>
          <button type="button" class="flex items-center w-full p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" data-collapse-toggle="dropdown-ecommerce" aria-controls="dropdown-ecommerce">
            <svg class="w-5 h-5 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2m-8 0h8"/></svg>
            <span class="flex-1 ml-3 text-left whitespace-nowrap">Mídias</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <ul id="dropdown-ecommerce" class="hidden py-2 space-y-2">
            <li><a href="#" class="flex items-center pl-11 p-2 text-gray-900 rounded-lg hover:bg-gray-100">Produtos</a></li>
            <li><a href="#" class="flex items-center pl-11 p-2 text-gray-900 rounded-lg hover:bg-gray-100">Faturamento</a></li>
            <li><a href="#" class="flex items-center pl-11 p-2 text-gray-900 rounded-lg hover:bg-gray-100">Notas</a></li>
          </ul>
        </li> --}}

        <!-- Outros itens do menu (pode manter ou adaptar) -->
        <li><a href="/reminder/home" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group"><svg class="w-5 h-5 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg><span class="ml-3">Lembretes</span></a></li>
        <li><a href="#" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group"><svg class="w-5 h-5 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-16"/></svg><span class="ml-3">Midias <span class="ml-2 bg-red-100 text-red-800 text-xs font-medium px-2 py-0.5 rounded">2</span></span></a></li>
        <li><a href="/users" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group"><svg class="w-5 h-5 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg><span class="ml-3">Usuários</span></a></li>
      </ul>
    </div>
  </aside>

  <!-- Conteúdo Principal -->
  <div class="sm:ml-64 pt-16 flex-1"> <!-- pt-16 = altura do header fixo -->
    <main class="p-6">

      <!-- Mensagens Flash -->
      {{#if message}}<div class="mb-4 p-4 text-blue-800 bg-blue-100 border border-blue-300 rounded">{{message}}</div>{{/if}}
      {{#if error}}<div class="mb-4 p-4 text-red-800 bg-red-100 border border-red-300 rounded">{{error}}</div>{{/if}}
      {{#if success}}<div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded">{{success}}</div>{{/if}}
      {{#if warning}}<div class="mb-4 p-4 text-yellow-800 bg-yellow-100 border border-yellow-300 rounded">{{warning}}</div>{{/if}}

      <!-- Conteúdo dinâmico da página -->
      {{{body}}}

    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 py-6 mt-auto">
      <div class="max-w-7xl mx-auto px-6 text-center text-gray-600">
        © 2025 Lembretes. Todos os direitos reservados.
      </div>
    </footer>
  </div>

</body>
</html>